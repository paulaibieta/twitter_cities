  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Local tweets with <%= query %></h3>
      </div>  
        <div class="panel-body">
          <% tweets["statuses"].each do |tweet| %>
            <br>
            <%= tweet["text"] %>
            <br>
            tweeted by: <%= tweet["user"]["name"] %> (<%= tweet["user"]["screen_name"] %>)
            <br>
              <% if tweet["entities"]["media"].present? %>
              <%= image_tag tweet["entities"]["media"][0]["media_url"], size: "300x216" %>
              <% end %><br>
          <% end %>
       
        </div>  
    </div>        
  </div>